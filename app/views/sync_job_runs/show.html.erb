<div class="space-y-6">
  <!-- Header with back button -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%= link_to sync_job_runs_path, class: "inline-flex items-center px-3 py-2 border border-gray-600 text-sm font-medium rounded-md text-gray-300 bg-gray-700 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Sync Jobs
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-white"><%= @job_run.job_type.humanize %> Job</h1>
        <p class="mt-1 text-gray-400">Sync job details and results</p>
      </div>
    </div>
    <div class="flex items-center space-x-4">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= if @job_run.running?
                                                                                             "bg-yellow-100 text-yellow-800"
                                                                                           else
                                                                                             @job_run.completed? ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800"
                                                                                           end %>">
        <% if @job_run.running? %>
          <svg class="-ml-1 mr-1.5 h-5 w-5 text-yellow-400 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
        <% elsif @job_run.completed? %>
          <svg class="-ml-1 mr-1.5 h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% else %>
          <svg class="-ml-1 mr-1.5 h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <%= @job_run.status.humanize %>
      </span>
    </div>
  </div>

  <!-- Job Details -->
  <div class="bg-gray-800 shadow overflow-hidden sm:rounded-lg border border-gray-700">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-white">Job Details</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-400">Information about this sync job execution</p>
    </div>
    <div class="border-t border-gray-700">
      <dl>
        <div class="bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-300">Job Type</dt>
          <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2"><%= @job_run.job_type.humanize %></dd>
        </div>
        <div class="bg-gray-700 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-300">Status</dt>
          <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= if @job_run.running?
                                                                                                       "bg-yellow-100 text-yellow-800"
                                                                                                     else
                                                                                                       @job_run.completed? ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800"
                                                                                                     end %>">
              <%= @job_run.status.humanize %>
            </span>
          </dd>
        </div>
        <div class="bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-300">Started At</dt>
          <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
            <%= @job_run.started_at.strftime("%B %d, %Y at %I:%M %p") %>
            <span class="text-gray-400">(<%= time_ago_in_words(@job_run.started_at) %> ago)</span>
          </dd>
        </div>
        <% if @job_run.completed_at %>
          <div class="bg-gray-700 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-300">Completed At</dt>
            <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
              <%= @job_run.completed_at.strftime("%B %d, %Y at %I:%M %p") %>
              <span class="text-gray-400">(<%= time_ago_in_words(@job_run.completed_at) %> ago)</span>
            </dd>
          </div>
        <% end %>
        <div class="bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-300">Duration</dt>
          <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2"><%= @job_run.duration_text %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Results -->
  <% if @job_run.completed? && @job_run.parsed_results.any? %>
    <div class="bg-gray-800 shadow overflow-hidden sm:rounded-lg border border-gray-700">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-white">Job Results</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-400">Summary of changes made during this sync</p>
      </div>
      <div class="border-t border-gray-700">
        <div class="px-4 py-5 sm:px-6">
          <% results = @job_run.parsed_results %>
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <% if results["created"] %>
              <div class="bg-green-900 border border-green-700 rounded-lg p-4 text-center">
                <div class="text-2xl font-bold text-green-400"><%= results["created"] %></div>
                <div class="text-sm text-green-200">Created</div>
              </div>
            <% end %>
            <% if results["updated"] %>
              <div class="bg-blue-900 border border-blue-700 rounded-lg p-4 text-center">
                <div class="text-2xl font-bold text-blue-400"><%= results["updated"] %></div>
                <div class="text-sm text-blue-200">Updated</div>
              </div>
            <% end %>
            <% if results["errors"] && results["errors"] > 0 %>
              <div class="bg-red-900 border border-red-700 rounded-lg p-4 text-center">
                <div class="text-2xl font-bold text-red-400"><%= results["errors"] %></div>
                <div class="text-sm text-red-200">Errors</div>
              </div>
            <% end %>
            <% if results["removed"] %>
              <div class="bg-orange-900 border border-orange-700 rounded-lg p-4 text-center">
                <div class="text-2xl font-bold text-orange-400"><%= results["removed"] %></div>
                <div class="text-sm text-orange-200">Removed</div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Error Details -->
  <% if @job_run.failed? && @job_run.error_message.present? %>
    <div class="bg-red-900 border border-red-700 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-200">Job Failed</h3>
          <div class="mt-2 text-sm text-red-100">
            <div class="bg-red-800 rounded p-3 font-mono text-sm">
              <%= @job_run.error_message %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Specific Error Details -->
  <% if @job_run.completed? && @job_run.parsed_results["error_details"]&.any? %>
    <div class="bg-red-900 border border-red-700 rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-red-200">Sync Errors</h3>
        <p class="mt-1 max-w-2xl text-sm text-red-300">Templates that failed to sync with Community Applications</p>
      </div>
      <div class="border-t border-red-700">
        <ul class="divide-y divide-red-700">
          <% @job_run.parsed_results["error_details"].each do |error_detail| %>
            <li class="px-4 py-4">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3 flex-1">
                  <div class="flex items-center justify-between">
                    <p class="text-sm font-medium text-red-200"><%= error_detail["template"] %></p>
                    <span class="text-xs text-red-400">
                      <%= error_detail["repository"] %>
                      <% if error_detail["search_repository"] != error_detail["repository"] %>
                        → <%= error_detail["search_repository"] %>
                      <% end %>
                    </span>
                  </div>
                  <p class="text-sm text-red-300 mt-1"><%= error_detail["error"] %></p>
                  <% if error_detail["error"].include?("No matching") %>
                    <p class="text-xs text-red-400 mt-1">
                      💡 Try setting a manual CA repository mapping on the template page
                    </p>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!-- Raw Results (for debugging) -->
  <% if @job_run.results.present? %>
    <div class="bg-gray-800 shadow overflow-hidden sm:rounded-lg border border-gray-700">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-white">Raw Results</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-400">Complete job output for debugging</p>
      </div>
      <div class="border-t border-gray-700">
        <div class="px-4 py-5 sm:px-6">
          <pre class="text-xs text-gray-300 bg-gray-900 p-4 rounded border border-gray-600 overflow-x-auto"><%= @job_run.results %></pre>
        </div>
      </div>
    </div>
  <% end %>
</div>
