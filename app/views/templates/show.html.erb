<div class="space-y-6">
  <!-- Header with back button -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%= link_to templates_path, class: "inline-flex items-center px-3 py-2 border border-gray-600 text-sm font-medium rounded-md text-gray-300 bg-gray-700 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Templates
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-white"><%= @template.name %></h1>
        <p class="mt-1 text-gray-400"><%= @template.repository %></p>
      </div>
    </div>
    <div class="flex items-center space-x-4">
      <% if @template.local? && @comparison %>
        <% if @comparison.pending? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
            <svg class="-ml-1 mr-1.5 h-5 w-5 text-orange-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            Needs Review
          </span>
        <% elsif @comparison.reviewed? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
            <svg class="-ml-1 mr-1.5 h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Ready to Apply
          </span>
        <% elsif @comparison.applied? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            <svg class="-ml-1 mr-1.5 h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Up to Date
          </span>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Template overview -->
  <div class="bg-gray-800 shadow overflow-hidden sm:rounded-lg border border-gray-700">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-white">Template Overview</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-400">Basic information about this template</p>
    </div>
    <div class="border-t border-gray-700">
      <dl>
        <div class="bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-300">Template Name</dt>
          <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2 flex items-center">
            <% if @template.banner.present? %>
              <img class="h-8 w-8 rounded mr-3" src="<%= @template.banner %>" alt="<%= @template.name %>">
            <% end %>
            <%= @template.name %>
          </dd>
        </div>
        <div class="bg-gray-700 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-300">Repository</dt>
          <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2"><%= @template.repository %></dd>
        </div>
        <% if @template.category.present? %>
          <div class="bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-300">Category</dt>
            <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2"><%= @template.category %></dd>
          </div>
        <% end %>
        <% if @template.network.present? %>
          <div class="bg-gray-700 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-300">Network</dt>
            <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2"><%= @template.network %></dd>
          </div>
        <% end %>
        <% if @template.webui.present? %>
          <div class="bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-300">Web UI</dt>
            <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
              <a href="<%= @template.webui %>" target="_blank" class="text-blue-400 hover:text-blue-300 underline">
                <%= @template.webui %>
              </a>
            </dd>
          </div>
        <% end %>
        <div class="bg-gray-700 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-300">Source</dt>
          <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @template.local? ? "bg-blue-100 text-blue-800" : "bg-green-100 text-green-800" %>">
              <%= @template.source.humanize %>
            </span>
          </dd>
        </div>
        <div class="bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-300">Status</dt>
          <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @template.status == "active" ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800" %>">
              <%= @template.status.humanize %>
            </span>
          </dd>
        </div>
        <% if @template.local? %>
          <div class="bg-gray-700 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-300">
              Community Apps Sync
              <p class="text-xs text-gray-400 mt-1 font-normal">Configure how this template syncs with Community Applications</p>
            </dt>
            <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
              <%= form_with model: @template, url: template_path(@template), method: :patch, local: true, class: "space-y-3", data: { controller: "community-sync" } do |form| %>
                <div class="flex items-center space-x-3 p-3 bg-gray-800 border border-gray-600 rounded-lg">
                  <%= form.check_box(
                        :not_in_community,
                        class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-600 bg-gray-700 rounded",
                        id: "not_in_community_checkbox",
                        data: { action: "change->community-sync#toggleCommunitySync" },
                      ) %>
                  <%= form.label(
                        :not_in_community,
                        "This app is not available in Community Applications",
                        class: "text-sm text-gray-300 cursor-pointer",
                        for: "not_in_community_checkbox",
                      ) %>
                </div>

                <div id="community_matching_section" class="<%= "hidden" if @template.not_in_community? %>">
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    </div>
                    <%= form.text_field(
                          :community_repository,
                          value: @template.community_repository || @template.repository,
                          placeholder: "Enter Community Apps repository name (e.g., binhex/arch-qbittorrentvpn)",
                          class: "block w-full pl-10 pr-3 py-3 border-2 border-gray-600 rounded-lg bg-gray-800 text-white text-sm placeholder-gray-400 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:bg-gray-700 transition-colors duration-200 hover:border-gray-500",
                          title: "Click to edit the Community Applications repository name",
                        ) %>
                  </div>
                </div>

                <div class="flex justify-end">
                  <%= form.submit(
                        "Update Settings",
                        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200 cursor-pointer shadow-sm",
                      ) %>
                </div>
              <% end %>
              <% if @template.not_in_community? %>
                <div class="mt-3 p-3 bg-yellow-900 border border-yellow-700 rounded-lg">
                  <div class="flex">
                    <div class="flex-shrink-0">
                      <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 0 00-1-1z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm text-yellow-200">
                        <span class="font-medium">Excluded from Community Sync:</span> This template will not be checked against Community Applications
                      </p>
                    </div>
                  </div>
                </div>
              <% elsif @template.community_repository.present? && @template.community_repository != @template.repository %>
                <div class="mt-3 p-3 bg-orange-900 border border-orange-700 rounded-lg">
                  <div class="flex">
                    <div class="flex-shrink-0">
                      <svg class="h-5 w-5 text-orange-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm text-orange-200">
                        <span class="font-medium">Manual Override Active:</span> Will look for "<%= @template.community_repository %>" in Community Applications
                      </p>
                    </div>
                  </div>
                </div>
              <% elsif @template.has_comparison? %>
                <div class="mt-3 p-3 bg-green-900 border border-green-700 rounded-lg">
                  <div class="flex">
                    <div class="flex-shrink-0">
                      <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm text-green-200">
                        <span class="font-medium">Successfully Matched:</span> Found matching template in Community Applications
                      </p>
                    </div>
                  </div>
                </div>
              <% else %>
                <div class="mt-3 p-3 bg-gray-800 border border-gray-600 rounded-lg">
                  <div class="flex">
                    <div class="flex-shrink-0">
                      <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm text-gray-300">
                        <span class="font-medium">No Match Found:</span> Enter the correct Community Applications repository name above to enable automatic updates
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            </dd>
          </div>
        <% end %>
        <% if @template.last_updated_at.present? %>
          <div class="bg-gray-700 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-300">Last Updated</dt>
            <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
              <%= @template.last_updated_at.strftime("%B %d, %Y at %I:%M %p") %>
              <span class="text-gray-400">(<%= time_ago_in_words(@template.last_updated_at) %> ago)</span>
            </dd>
          </div>
        <% end %>
        <% if @template.description.present? %>
          <div class="bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-300">Description</dt>
            <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2"><%= simple_format(@template.description) %></dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <!-- Template configurations -->
  <div class="bg-gray-800 shadow overflow-hidden sm:rounded-lg border border-gray-700">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-white">Configuration Parameters</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-400">Docker container configuration options</p>
    </div>
    <% if @template.template_configs.any? %>
      <div class="border-t border-gray-700">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-700">
            <thead class="bg-gray-700">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Name</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Type</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Target</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Default</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Required</th>
              </tr>
            </thead>
            <tbody class="bg-gray-800 divide-y divide-gray-700">
              <% @template.template_configs.ordered.each_with_index do |config, index| %>
                <tr class="<%= index.even? ? "bg-gray-800" : "bg-gray-700" %>">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-white"><%= config.name %></div>
                    <% if config.description.present? %>
                      <div class="text-sm text-gray-400"><%= truncate(config.description, length: 100) %></div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= case config.config_type
                          when "Port" then "bg-blue-100 text-blue-800"
                          when "Path" then "bg-green-100 text-green-800"
                          when "Variable" then "bg-purple-100 text-purple-800"
                          else "bg-gray-100 text-gray-800"
                          end %>">
                      <%= config.config_type %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                    <% if config.target.present? %>
                      <code class="bg-gray-900 px-2 py-1 rounded text-xs"><%= config.target %></code>
                    <% else %>
                      <span class="text-gray-500">-</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                    <% if config.default_value.present? %>
                      <code class="bg-gray-900 px-2 py-1 rounded text-xs"><%= truncate(config.default_value, length: 30) %></code>
                    <% else %>
                      <span class="text-gray-500">-</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if config.required? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        Required
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        Optional
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="border-t border-gray-700 text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-white">No configuration parameters</h3>
        <p class="mt-1 text-sm text-gray-400">This template doesn't have any configurable parameters.</p>
      </div>
    <% end %>
  </div>
</div>
